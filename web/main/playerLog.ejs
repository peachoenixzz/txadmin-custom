          />
        </div>
        <div class="search-regex">
          <input
            id="search-regex"
            type="text"
            class="form-control"
            placeholder="Regex"
          />
        </div>
        <button class="btn btn-primary" type="button" onclick="searchData()">
          Search
        </button>
      </div>
      <div class="d-flex"></div>
    </div>
  </div>

  <table id="myTable" class="table table-striped">
    <thead>
      <tr>
        <th>Event</th>
        <th>Content</th>
        <th>ID</th>
        <th>Player Name</th>
        <th>Discord ID</th>
      </tr>
    </thead>
    <tbody id="data-body"></tbody>
  </table>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script>
    let data = {
      discord_id: "",
      event: "",
      begin: "2023-06-01T08:30",
      until: "2023-08-01T08:30",
      regex: "",
    };
  

    function searchData() {

        const startTime = document.getElementById("start-time").value;
        const endTime = document.getElementById("end-time").value;
        const event = document.getElementById("search-event").value;
        const discordID = document.getElementById("search-discordID").value;
        const regex = document.getElementById("search-regex").value;

        data.event = event;
        data.begin = startTime;
        data.until = endTime;
        data.discord_id = discordID;
        data.regex = regex;

        console.log(data)

    const api = "https://circleproject.dev/api/fivemlog/custom";

    const headers = {
      // 'Host': 'https://circleproject.dev',
      // 'Origin': 'https://tx.circleproject.dev',
      "Access-Control-Allow-Origin": "https://tx.circleproject.dev",
      // 'Access-Control-Request-Method' : 'GET',
      // 'Access-Control-Request-Headers': 'Authorization',
      // 'Referer': 'https://tx.circleproject.dev',
      Authorization: "Basic dGhlY2lyY2xlZGV2OlRoZWNpcmNsZTExMiFAIw==",
    };

    axios
      .post(api, data, {
        headers: headers,
      })
      .then(function async(response) {
        const resData = response.data;
        const dataBody = document.getElementById("data-body");
        dataBody.innerHTML = "";

        console.log(resData);
        resData.forEach(function (data) {
          const row = document.createElement("tr");

          const eventNameCell = document.createElement("td");
          eventNameCell.textContent = data.event;
          row.appendChild(eventNameCell);

          const contentCell = document.createElement("td");
          contentCell.textContent = data.content;
          row.appendChild(contentCell);

          const sourceCell = document.createElement("td");
          sourceCell.textContent = data.source;
          row.appendChild(sourceCell);

          const playerNameCell = document.createElement("td");
          playerNameCell.textContent = data.player.name;
          row.appendChild(playerNameCell);

          const discordCell = document.createElement("td");
          discordCell.textContent = data.player.identifiers.discord;
          row.appendChild(discordCell);

          dataBody.appendChild(row);

          $(document).ready(function await () {
            $("#myTable").DataTable();
          });
        });
      })
      .catch(function (error) {
        console.log(error);
      });
    }
  </script>

